{
  "compilerOptions": {
    /* --- Core Type-Checking --- */
    "target": "ES2022",
    "module": "CommonJS",
    "lib": ["ES2022"], // This is correct. It sets the JavaScript features to a modern version.
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": false,
    "noImplicitThis": true,
    "alwaysStrict": true,

    /* --- Module Resolution --- */
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@/auth/*": ["src/auth/*"],
      "@/core/*": ["src/core/*"],
      "@/drizzle/*": ["src/drizzle/*"],
      "@/shared/*": ["src/shared/*"]
    },
    
    // =======================================================================
    // THIS IS THE KEY SETTING THAT SOLVES THE ERRORS. IT IS ALREADY CORRECT.
    // It tells TypeScript to load all type definitions for the Node.js
    // environment, which includes 'crypto', 'process', and 'console'.
    "types": ["node", "jest"],
    // =======================================================================

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    /* --- Emit --- */
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "outDir": "./dist",

    /* --- Project --- */
    "incremental": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}